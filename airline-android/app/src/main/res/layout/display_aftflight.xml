<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/display_aftflight_airlineNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/airline_name"
        android:textSize="20sp" />

    <ScrollView
        android:id="@+id/display_aftflight_mainScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/display_aftflight_airlineNameText">

        <LinearLayout
            android:id="@+id/display_aftflight_flightLinearListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>
</RelativeLayout>

